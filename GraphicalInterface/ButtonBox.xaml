<UserControl x:Class="GraphicalInterface.ButtonBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicalInterface"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="load" Margin="10" Padding="10, 5" Click="load_Click" Grid.Column="0" Grid.Row="1">Load</Button>
        <Button x:Name="save" Margin="10" Padding="10, 5" Click="save_Click" Grid.Column="5" Grid.Row="1">Save</Button>
        <Button x:Name="prev" Margin="10" Padding="10, 5" Click="prev_Click">Previous</Button>
        <Button x:Name="generate" Margin="10" Padding="10, 5" Click="generate_Click" Grid.Column="1">Generate</Button>
        <Button x:Name="solve" Margin="10" Padding="10, 5" Click="solve_Click" Grid.Column="2">Solve</Button>
        <Button x:Name="print" Margin="10" Padding="10, 5" Click="print_Click" Grid.Column="3">Print</Button>
        <Button x:Name="randomize" Margin="10" Padding="10, 5" Click="randomize_Click" Grid.Column="4">Random Transform</Button>
        <Button x:Name="add" Margin="10" Padding="10, 5" Click="add_Click" Grid.Column="1" Grid.Row="1">Add</Button>
        <Button x:Name="remove" Margin="10" Padding="10, 5" Click="remove_Click" Grid.Column="2" Grid.Row="1">Remove</Button>
        <Label Margin="10" Padding="10, 5" Grid.Column="3" Grid.Row="1">Difficulty</Label>
        <ComboBox x:Name="difficulty" Margin="10" Padding="10, 5" Width="125" Grid.Column="4" Grid.Row="1" SelectedIndex="2" SelectionChanged="difficulty_SelectionChanged">
            <ComboBoxItem Content="No"/>
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Advanced"/>
            <ComboBoxItem Content="Hard"/>
        </ComboBox>
        <Button x:Name="next" Margin="10" Padding="10, 5" Click="next_Click" Grid.Column="9999999">Next</Button>
        
    </Grid>
</UserControl>
